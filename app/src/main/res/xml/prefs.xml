<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="debug_info"
        android:title="Show Debug Info" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="day_night"
        android:title="Enable Day Night Cycle" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="fix_time"
        android:title="Fix Time Of Day" />
    <SeekBarPreference
        android:defaultValue="0"
        android:key="time_of_day"
        android:max="23"
        android:title="Fixed Time Of Day"
        app:min="0"
        app:seekBarIncrement="1"
        app:showSeekBarValue="true" />
</PreferenceScreen>